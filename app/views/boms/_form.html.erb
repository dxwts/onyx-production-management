<%= form_for(@bom) do |f| %>
  <% if @bom.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bom.errors.count, "error") %> prohibited this bom from being saved:</h2>

      <ul>
      <% @bom.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :bom_id %><br>
    <%= f.text_field :bom_id, :class => "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label "型号" %>
      <%= f.select :product_id, options_for_select(Product.all.collect{ |p| [p.name, p.id] }, :selected => f.object.product_id), {:include_blank => true}, {:class =>  "form-control"}  %>
  </div>
  <div class="form-group">
    <%= f.label :version %><br>
    <%= f.text_field :version, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :state %><br>
    <%= f.text_field :state, :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
