<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>User</th>
      <th>Time</th>
      <th>Version</th>
      <th>Product</th>
      <th>Color</th>
      <th>Quantity</th>
      <th>Delivery time</th>
      <th>Customer</th>
      <th>Remark</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_id %></td>
        <td><%= order.user %></td>
        <td><%= order.time %></td>
        <td><%= order.version %></td>
        <td><%= order.product %></td>
        <td><%= order.color %></td>
        <td><%= order.quantity %></td>
        <td><%= order.delivery_time %></td>
        <td><%= order.customer %></td>
        <td><%= order.remark %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

