<h1>Listing products</h1>

<div class="tools-bar">
<%= button_to "添加新产品", new_product_path,
      :class => "btn btn-success", :method => :get %>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td>
        	<%= button_to "订单", orders_product_path(product), :class => "btn btn-default", :method => :get%>
        </td>
        <td><%= button_to "BOM", boms_product_path(product), :class => "btn btn-default", :method => :get %></td>
        <td>
        	<%= button_to "组装BOM", assembly_boms_product_path(product), :class => "btn btn-default", :method => :get%>
        </td>
        <!-- <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

