<div class="container">
    <h1>产品列表</h1>

    <div class="tools-bar">
        <%= button_to "添加新产品", new_product_path,
        :class => "btn btn-success pull-right", :method => :get %>
    </div>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>型号</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% @products.each do |product| %>
            <tr>
                <td><%= product.name %></td>
                <td> <%= button_to "订单", orders_product_path(product), :class => "btn btn-default btn-xs", :method => :get%>
                <%= button_to "BOM", boms_product_path(product), :class => "btn btn-default btn-xs", :method => :get %>
                <%= button_to "组装BOM", assembly_boms_product_path(product), :class => "btn btn-default btn-xs", :method => :get%>
                <%= button_to '编辑', edit_product_path(product), :class => "btn btn-primary btn-xs", :method => :get %>
                <%= button_to '删除', product, method: :delete,:class => "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %> </td>
                <!-- <td><%= link_to 'Show', product %></td>
                <td><%= link_to 'Edit', edit_product_path(product) %></td>
                <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
            </tr>
            <% end %>
        </tbody>
    </table>

</div>
